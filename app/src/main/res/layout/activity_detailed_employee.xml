<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schedulingApp.Activities.DetailedEmployeeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee Name: "/>

        <EditText
            android:id="@+id/edit_detailed_employeeName"
            android:layout_width="689dp"
            android:layout_height="69dp"
            android:hint="Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "/>

        <EditText
            android:id="@+id/edit_detailed_employeePhone"
            android:layout_width="752dp"
            android:layout_height="58dp"
            android:hint="000-0000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "/>

        <EditText
            android:id="@+id/edit_detailed_employeeEmail"
            android:layout_width="759dp"
            android:layout_height="68dp"
            android:hint="name@gmail.com" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position:" />

        <Spinner
            android:id="@+id/employeeEditPositionSpinner"
            android:layout_width="745dp"
            android:layout_height="77dp"
            android:layout_weight="1" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveDetailedEmployeeButton"
                android:layout_width="228dp"
                android:layout_height="83dp"
                android:layout_marginStart="80dp"
                android:clickable="true"
                android:onClick="saveDetailedEmployeeButton"
                android:text="Save" />

            <Button
                android:id="@+id/deleteEmployeeButton"
                android:layout_width="206dp"
                android:layout_height="80dp"
                android:layout_marginStart="80dp"
                android:clickable="true"
                android:onClick="deleteEmployeeButton"
                android:text="Delete" />


        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>