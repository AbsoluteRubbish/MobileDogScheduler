<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schedulingApp.Activities.DetailedServicesActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product: "
                    android:textSize="24sp" />
                <Spinner
                    android:id="@+id/edit_detailed_product"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Ons: "
                    android:textSize="24sp" />
                <Spinner
                    android:id="@+id/edit_detailed_addOns"
                    android:layout_width="match_parent"
                    android:layout_height="92dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textSize="24sp" />
                <EditText
                    android:id="@+id/edit_detailed_date"
                    android:layout_width="729dp"
                    android:layout_height="84dp"
                    android:hint="MM/DD/YY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textSize="24sp" />
                <EditText
                    android:id="@+id/edit_detailed_time"
                    android:layout_width="729dp"
                    android:layout_height="84dp"
                    android:hint="HH:MM"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes: "
                    android:textSize="24sp" />
                <EditText
                    android:id="@+id/edit_detailed_notes"
                    android:layout_width="match_parent"
                    android:layout_height="85dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dog: "
                    android:textSize="24sp" />
                <Spinner
                    android:id="@+id/edit_detailed_serviceDog"
                    android:layout_width="match_parent"
                    android:layout_height="85dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Performed By: "
                    android:textSize="24sp" />
                <Spinner
                    android:id="@+id/edit_detailed_serviceEmployee"
                    android:layout_width="match_parent"
                    android:layout_height="85dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveDetailedServiceButton"
                    android:layout_width="195dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="100dp"
                    android:clickable="true"
                    android:onClick="saveDetailedServiceButton"
                    android:text="Save" />

                <Button
                    android:id="@+id/deleteServiceButton"
                    android:layout_width="192dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="150dp"
                    android:clickable="true"
                    android:onClick="deleteServiceButton"
                    android:text="Delete" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>